<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calculator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/calculator_squat_rm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:tag="squat"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/calculator_squat_weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/calculator_squat_weight"
        style="@style/NotEditable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:inputType="number"
        android:padding="0dp"
        android:tag="squat,weight"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/calculator_squat_reps"
        app:layout_constraintStart_toEndOf="@+id/calculator_squat_rm"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/calculator_squat_reps"
        style="@style/NotEditable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:inputType="number"
        android:padding="0dp"
        android:tag="squat,reps"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calculator_squat_weight"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calculator_bench_rm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:tag="bench"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/calculator_bench_weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculator_squat_weight" />

    <EditText
        android:id="@+id/calculator_bench_weight"
        style="@style/NotEditable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:padding="0dp"
        android:tag="bench,weight"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/calculator_bench_reps"
        app:layout_constraintStart_toEndOf="@+id/calculator_bench_rm"
        app:layout_constraintTop_toBottomOf="@+id/calculator_squat_weight" />

    <EditText
        android:id="@+id/calculator_bench_reps"
        style="@style/NotEditable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:padding="0dp"
        android:tag="bench,reps"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/calculator_bench_weight"
        app:layout_constraintTop_toBottomOf="@+id/calculator_squat_weight" />

    <TextView
        android:id="@+id/calculator_deadlift_rm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:tag="deadlift"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/calculator_deadlift_weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculator_bench_weight" />

    <EditText
        android:id="@+id/calculator_deadlift_weight"
        style="@style/NotEditable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:padding="0dp"
        android:tag="deadlift,weight"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/calculator_deadlift_reps"
        app:layout_constraintStart_toEndOf="@+id/calculator_deadlift_rm"
        app:layout_constraintTop_toBottomOf="@+id/calculator_bench_weight" />

    <EditText
        android:id="@+id/calculator_deadlift_reps"
        style="@style/NotEditable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:padding="0dp"
        android:tag="deadlift,reps"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calculator_deadlift_weight"
        app:layout_constraintTop_toBottomOf="@+id/calculator_bench_weight" />

    <TextView
        android:id="@+id/calculator_ohpress_rm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:tag="ohpress"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/calculator_ohpress_weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculator_deadlift_weight" />

    <EditText
        android:id="@+id/calculator_ohpress_weight"
        style="@style/NotEditable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:padding="0dp"
        android:tag="ohpress,weight"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/calculator_ohpress_reps"
        app:layout_constraintStart_toEndOf="@+id/calculator_ohpress_rm"
        app:layout_constraintTop_toBottomOf="@+id/calculator_deadlift_weight" />

    <EditText
        android:id="@+id/calculator_ohpress_reps"
        style="@style/NotEditable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:padding="0dp"
        android:tag="ohpress,reps"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calculator_ohpress_weight"
        app:layout_constraintTop_toBottomOf="@+id/calculator_deadlift_weight" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/calculator_edit_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:src="@drawable/ic_edit_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
